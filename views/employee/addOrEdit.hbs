<div class="container">
<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
      <div class="form-row">      
        <!--==============NEW Layout Start==================-->
         <div class="form-group col-md-6">
            <label>NAME</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{employee.name}}">
        </div>
         <div class="form-group col-md-6">
            <label>Image</label>
            <input type="text" class="form-control" name="image" placeholder="Image Url" value="{{employee.image}}">
        </div>
         <div class="form-group col-md-6">
            <label>Description</label>
            <input type="text" class="form-control" name="description" placeholder="des" value="{{employee.description}}">
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="number" class="form-control" name="price" placeholder="price" value="{{employee.price}}">
        </div>
         <div class="form-group col-md-6">
            <label>Size</label>
            <input type="text" class="form-control" name="size" placeholder="Size" value="{{employee.size}}">
        </div>
         <div class="form-group col-md-6">
            <label>Color</label>
            <input type="text" class="form-control" name="color" placeholder="Colour" value="{{employee.color}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-warning"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-success" href="/employee/list"><i class="fa fa-list-alt"></i> VIEW ALL Details</a>
    </div>
    </div>
</form>